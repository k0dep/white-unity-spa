@inject IConfiguration Config

<div class="card border border-primary mb-3">
  <div class="card-body">
    <h5 class="card-title">@Package.DisplayName <small> &#64; @Package.Name</small> </h5>
    <h6 class="card-subtitle mb-2 text-muted">
        @Package.Description
    </h6>
    <ProcessButton text="Update" link=@updateLink /> 
  </div>
</div>

@functions {
    [Parameter]
    PackageInfoDto Package { get; set; }

    string updateLink => string.Format(Config["updateUrl"], Package.Name);
}
